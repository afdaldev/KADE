<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/oneHundredFiftyDP"
    android:layout_gravity="center"
    android:layout_margin="@dimen/tenDP">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBadge"
            android:layout_width="@dimen/oneHundredDP"
            android:layout_height="@dimen/oneHundredDP"
            android:layout_marginStart="@dimen/twentyFiveSP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/colorAccent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/tenDP"
            android:layout_marginTop="@dimen/twentyFiveSP"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgBadge"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/app_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPlayerDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/tenDP"
            android:layout_marginTop="@dimen/tenDP"
            android:layout_marginEnd="@dimen/tenDP"
            android:layout_marginBottom="@dimen/twentyFiveDP"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgBadge"
            app:layout_constraintTop_toBottomOf="@id/tvPlayerName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>